  <body>
{{>navbar}}

    <div class="container-fluid main_header">
        <div class="row">
            <div class="col-md-10 col-12 mx-auto">
              <div class="row">
                <div class="col-md-6 col-12 main_header_left">
                    <p>Welcome to weather app</p>
                    <h1>Get the leatest <span class="text-clr">weather </span>info of your city</h1>
                    <a href="/weather"><button>check now</button></a>
                </div>
                <div class="col-md-6 col-12 main_header_right">
                  <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                      <div class="carousel-item active">
                        <img class=" w-100" src="./img/1.jpg" alt="First slide">
                      </div>
                      <div class="carousel-item">
                        <img class=" w-100" src="./img/2.jpg" alt="Second slide">
                      </div>
                      <div class="carousel-item">
                        <img class=" w-100" src="./img/3.jpg" alt="Third slide">
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
        </div>
    </div>
    <!-- footer code -->
